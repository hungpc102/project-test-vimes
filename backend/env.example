# =====================================================
# WAREHOUSE MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# Copy this file to .env and update values accordingly
# =====================================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=warehouse_management
DB_USER=postgres
DB_PASSWORD=130900
DB_MAX_POOL=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Swagger Documentation
SWAGGER_TITLE=Warehouse Management API
SWAGGER_DESCRIPTION=Professional Warehouse Management System API
SWAGGER_VERSION=1.0.0
SWAGGER_CONTACT_NAME=Senior Backend Developer
SWAGGER_CONTACT_EMAIL=dev@vimes.com

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_COMPRESSION=true

# External Services (if needed)
# REDIS_URL=redis://localhost:6379
# EMAIL_SERVICE_API_KEY=your-email-service-key
# SMS_SERVICE_API_KEY=your-sms-service-key 